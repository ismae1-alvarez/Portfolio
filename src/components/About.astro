 ---
    import GitHub from '../../public/img/github.svg';
    import Instagram from '../../public/img/instagram.svg';
    import Linkedin from '../../public/img/linkedin.svg';
    import X from '../../public/img/x-twitter.svg';
    import Profile from '../../public/img/profile.png';
    import { Image } from 'astro:assets';
 ---
 
 <main class="relative flex flex-col-reverse md:flex-row justify-between items-center px-2 pt-10 "> <!--checas el paddin checa lo del z-index, solo te ayuda en la parte de media queri -->
    <section class=" md:w-2/3 font-semibold ">
        <div class="flex flex-col justify-center gap-5">
            <h3 class="text-2xl">
                Hello it's Me
            </h3>
        
            <h2 class="text-5xl">
                Ismael Alvarez
            </h2>
        
            <h4 class="text-2xl">And I'm a <span class="pr-3 text-second-color texto-animado" id="write-text" ></span></h4>
        
            <p>
                Lorem ipsum dolor sit, amet consectetur adipisicing elit. Ullam, architecto ex obcaecati iure repellat quasi odit. Modi voluptatum dolores animi libero nesciunt aperiam iure, qui ab? Tempora fugit rerum inventore.   
            </p>

            <!-- Tal vez debe de Salir -->
            <ul class="flex  gap-5 ">
                <li >
                    <a href="gihub.com" class="h-12 w-12 flex flex-col justify-center items-center border-2 rounded-full border-transparent hover:border-second-color ">
                        <img src={GitHub.src} alt="github" class="h-8 w-8">
                    </a>
                </li>
                <li>
                    <a href="linkedin.com" class="h-12 w-12 flex flex-col justify-center items-center border-2 rounded-full border-transparent hover:border-second-color ">
                        <img src={Linkedin.src} alt="linkedin" class="h-8 w-8">
                    </a>
                </li>
                <li>
                    <a href="twitter.com" class="h-12 w-12 flex flex-col justify-center items-center border-2 rounded-full border-transparent hover:border-second-color ">
                        <img src={X.src} alt="x" class="h-8 w-8">
                    </a>
                </li>
                <li>
                    <a href="instagram.com" class="h-12 w-12 flex flex-col justify-center items-center border-2 rounded-full border-transparent hover:border-second-color ">
                        <img src={Instagram.src} alt="instagram" class="h-8 w-8">
                    </a>
                </li>
            </ul>
        </div>
        
        <div class="sticky w-fit h-fit flex items-center mt-8">
            <div class=" w-full h-full absolute blur bg-second-color -z-10 mt-5 p-3  rounded-xl "></div>
            <button class="flex items-center bg-second-color font-bold rounded-xl mt-5 p-3 " type="button">
                Download CV
            </button>
        </div>
    </section>


    <section class="sticky w-1/3 h-full flex items-center mb-20 md:mb-40 p-3  justify-center">
        <div class="absolute w-full h-full bg-second-color rounded-full blur -z-10 top-10 "></div>
        <div class="relative bg-second-color rounded-full top-10 flex overflow-hidden">
            <Image 
                src={Profile} 
                alt='profile' 
                loading="eager"
                class=''
                />
        </div>
    </section>
</main>

---
import Menu from "../../public/img/Menu.svg";
import '../css/efect-animation.css'
const items = ['Home', 'About', 'Services', 'Portfolio','Contact'];   
---

<div class="my-6 md:my-8 sticky z-10 h-10 w-full top-0 ">
    <nav class="backdrop-filter backdrop-blur flex items-center justify-between h-16 w-full after:absolute after:w-full after:h-full font-semibold px-2">

        <h1 class="font-bold uppercase text-2xl z-10 hover:cursor-pointer">Portfolio</h1>

        <ul class="md:flex justify-between gap-5 items-center font-semibold z-10  hidden  ">
            {items.map(item => (
                <li class="relative item-white">
                    <a class="item-blue text-xl font-sans " href={item.toLocaleLowerCase()}>{item}</a>
                </li>
            ))}
        </ul>

        
        <div class="flex md:hidden relative">
            <button class="bg-first-color items-center  p-2 rounded  border-2 border-transparent hover:border-second-color z-10 " id="menu-button">
                <img 
                    src={Menu.src}
                    alt="bar-menu"
                    class="h-5 w-5 text-white"
                />
            </button>   
            <ul class="hidden w-60 bg-first-color flex-col absolute right-0 top-14 border font-semibold text-lg font-sans px-2 rounded"  id="menu-list">
                {items.map(item => (
                    <li class="flex p-3">
                        <a class="relative item-white " href="#">
                            <span class="realative item-blue">{item}</span>
                        </a> 
                    </li>
                ))}
            </ul>
        </div>
    </nav>     
    </div>
</div> 